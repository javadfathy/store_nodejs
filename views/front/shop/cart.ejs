<%- include('../../includes/header.ejs') %>
<%- include('../../includes/breadcrumb.ejs', {breads: ['Shop', 'Cart']}) %>
    <section>
       <% if (products) {
            products.forEach(product => { %>
            <div class="w-full bg-gray-100 text-gray-800 my-2 rounded p-3 flex flex-row">
                <div class="flex-1">
                    <h3 class="text-2xl"><%= product.title %></h3>
                    <h3 class="text-sm text-gray-400"><%= product.price %></h3>    
                </div>
                <div class="flex-1 text-2xl flex items-center ">
                    <span class="rounded-full text-4xl mr-2 cursor-pointer">-</span>
                    <span class="rounded-full bg-gray-600 text-white text-center w-10 h-10 p-1">5</span>    
                    <span class="ml-2 text-3xl cursor-pointer">+</span>
                </div>
                <div class="flex items-center">
                    <button type="button" class="text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2  dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-red-900">Remove</button>
                </div>
            </div>
       <%   })
        } else { %>
            <div>
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    Cart is Empty
                </div>
            </div>
        <% } %>
    </section>
<%- include('../../includes/footer.ejs') %>